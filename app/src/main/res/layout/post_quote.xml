<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView

        android:clickable="true"
        android:id="@+id/quote_post_slug"
        android:layout_width="240dp"
        android:layout_height="150dp"
        android:layout_gravity="center"

        android:layout_marginLeft="60dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:maxLines="5"
        android:textSize="25sp" />

    <TextView
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:id="@+id/quote_post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quote_post_slug"

        android:textSize="12sp" />

    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/quote_post_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quote_post_slug"

        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/quote_post_date"
        android:background="@color/colorPrimaryDark" />

    <ImageView
        android:alpha="0.4"
        android:foreground="@drawable/quotes_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView" />

    <ImageView
        android:alpha="0.4"
        android:foreground="@drawable/quotes_symbol_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/quote_post_type"
        android:layout_alignStart="@+id/quote_post_type"
        android:layout_marginBottom="17dp" />
</RelativeLayout>