<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView

        android:id="@+id/t_icon"
        android:layout_width="150dp"

        android:layout_height="150dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/tumblr" />

    <ImageButton
        android:id="@+id/search_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_icon_2"
        android:layout_toRightOf="@+id/text_input_layout"
        app:srcCompat="@drawable/ic_send_black_24dp" />

    <android.support.design.widget.TextInputLayout

        android:id="@+id/text_input_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_icon_2"
        android:layout_marginLeft="15dp">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_edit_text"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_input_layout"
            android:layout_toLeftOf="@+id/search_image_button"
            android:layout_toStartOf="@+id/search_image_button"
            android:hint="Whose posts you wanna see?"

            />

        <Button
            android:id="@+id/studious"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="studiousmedic" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/t_icon_2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="73dp"
        android:background="@drawable/ic_search_black_24dp" />
</RelativeLayout>
