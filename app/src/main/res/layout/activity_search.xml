<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

            <ImageView

                android:id="@+id/t_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="27dp"
                android:src="@drawable/tumblr" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/search_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/ic_send_black_24dp" />


            <android.support.design.widget.TextInputLayout

                android:id="@+id/text_input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t_icon_2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp">


                <android.support.design.widget.TextInputEditText
                    android:id="@+id/text_input_edit_text"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/text_input_layout"
                    android:layout_marginRight="10dp"
                    android:hint="@string/search_hint"
                    android:textColorHint="@color/colorAccent"

                    />


            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/studious"
                android:layout_width="100dp"

                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="studiousmedic" />

            <ImageView
                android:id="@+id/t_icon_2"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="73dp"
                android:background="@drawable/ic_search_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/radio_group"

                />

            <CheckBox
                android:id="@+id/checkbox_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_input_layout"
                android:layout_margin="10dp"
                android:text="@string/type_checkbox" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkbox_radio_group"
                android:layout_marginLeft="10dp"
                android:visibility="gone">


                <RadioButton
                    android:id="@+id/text_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:textColorHighlight="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/photo_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="photo"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/video_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="video"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/audio_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="audio"
                    android:textSize="20sp" />


            </RadioGroup>
</RelativeLayout>